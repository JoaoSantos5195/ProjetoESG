@model LearnFlow.Models.CadastroModel

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Criação de conta</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/cadastro.css">
</head>
<body style="background-color: #ecf6ff;">
    <div class="cadastro-container">
        <h2 class="text-center mb-3">Criação de conta</h2>

        @if (ViewBag.Sucesso != null)
        {
            <div class="alert alert-success text-center">
                @ViewBag.Sucesso
            </div>

            <div class="text-center mt-3">
                <a href="/Home/Login" class="btn btn-success">Entrar</a>
            </div>
        }
        else
        {
            @if (ViewBag.Erro != null)
            {
                <div class="alert alert-danger">@ViewBag.Erro</div>
            }

            <form asp-controller="Cadastro" asp-action="Cadastro" method="post">
                <div class="form-group">
                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label">Nome</label>
                        <input asp-for="Nome" class="form-control" placeholder="Insira seu nome de usuário" required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Insira seu email" required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Senha" class="form-label">Senha</label>
                        <input asp-for="Senha" type="password" class="form-control" placeholder="Insira sua senha" required />
                    </div>

                    <input type="submit" value="Criar Conta" class="btn btn-primary" />
                </div>
            </form>
        }
    </div>
</body>
</html>
